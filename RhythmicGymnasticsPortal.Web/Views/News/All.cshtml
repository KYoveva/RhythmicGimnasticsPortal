@using RhythmicGymnasticsPortal.Web.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<RhythmicGymnasticsPortal.Web.Models.NewsModels.NewsDetailsViewModel>

@section styles {
    @Styles.Render("~/bundles/pagedlist")
}

@{
    ViewBag.Title = "All";
}
<section>
    <div class="container">
        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-md-3">
                @using (Html.BeginForm())
                {
                    <p>
                        Find by title: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                        <input type="submit" value="Search" />
                    </p>
                }
            </div>
            <div class="col-md-4 col-md-offset-1">
                <ul class="nav navbar-nav">
                    <li class="navbar-brand">Sorty by:</li>
                    <li>@Html.ActionLink("Title", "All", "News", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter }, null)</li>
                    <li>@Html.ActionLink("Date", "All", "News", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter }, null)</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-md-9">
                @Html.Partial("_NewsListPartial", Model)
                @Html.Partial("_NewsPagingPartial", Model)
            </div>
        </div>
    </div>
</section>