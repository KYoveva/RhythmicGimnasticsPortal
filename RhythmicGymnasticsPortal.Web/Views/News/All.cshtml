@using RhythmicGymnasticsPortal.Web.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<RhythmicGymnasticsPortal.Web.Models.NewsModels.NewsDetailsViewModel>

@section styles {
    @Styles.Render("~/bundles/pagedlist")
}

@{
    ViewBag.Title = "All";
}
<section>
    <div class="container">
        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-1">
                <ul class="nav navbar-nav">
                    <li class="navbar-brand">Sorty by:</li>
                    <li>@Html.ActionLink("Title", "All", "News", new { sortOrder = ViewBag.NameSortParm }, null)</li>
                    <li>@Html.ActionLink("Date", "All", "News", new { sortOrder = ViewBag.DateSortParm }, null)</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <hr />
        </div>
        <div class="row">
            <div class="col-md-9">
                @Html.Partial("_NewsListPartial", Model)
                @Html.Partial("_PagingPartial", Model)
            </div>
        </div>
    </div>
</section>
